@using Airline.Planner;
@using System;

<h1>All our destinations</h1>
@if (Model.Count ==0)
{
<h3> No destinations are available</h3>
}
@foreach(var city in Model)
{
<ul>
<li><a href="/flights?cityId=@city.GetId()">@city.@GetName()</a></li>
</ul>
}
<p>< a href='cities/new'>add new destination</a></p>
<p><a href='/'>Return to Main Page</a></p>
